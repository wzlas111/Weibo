<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppTheme_Light" parent="@style/PrivateThemeLight">
        <item name="add">@drawable/accountactivity_new_light</item>
        <item name="refresh">@drawable/refresh_light</item>
    </style>

    <!-- Application theme. -->
    <style name="PrivateThemeLight" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="leftmenu_btn_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">50.0dip</item>
        <item name="android:drawablePadding">8.0dip</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">left|center</item>
    </style>
</resources>
